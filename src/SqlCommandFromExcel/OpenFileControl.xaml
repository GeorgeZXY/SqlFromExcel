<UserControl x:Class="SqlCommandFromExcel.OpenFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SqlCommandFromExcel"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <Label x:Name="fileLabel" Content="Input file path or browse for file. xls, xlsx and csv" Margin="0,0,0,60" FontSize="18"/>
        <TextBox x:Name="filePathTextBox" Margin="0,50,100,0" />        
        <Button Content="Browse Files" Click="Button_Click"  Margin="720,50,0,0" />
    </Grid>
</UserControl>
